<html ang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <title>News App</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="chatclient.js"></script>

    </head>
    <body>
    <div class="container">
    <%- include ./partial/header.ejs %>
    <br><br>
    <h6 style="width:100%;align-content: center;"> 
        City : <%= weather.city %>,  Temperature : <%= weather.temperature %> ( <%= weather.temp_min %> - <%= weather.temp_max %> ),
        Weather : <%= weather.description %> <img src=<%= weather.icon %> />
    </h6>
    <div class="row">
        <!-- col-6 -->
        <div class="col-md-6"> 
        <div class="panel">
        <div class="panel-body">    
            <!-- Slideshow Start -->
            <div class="slideshow-container" >

                <!-- Full-width images with number and caption text -->
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                      </ol>
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <a href=<%= news[0].url %> target="_blank" > 
                        <img class="d-block w-100" src=<%= news[0].urlToImage %> alt="First slide">
                        </a>
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src=<%= news[1].urlToImage %> alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src=<%= news[2].urlToImage %> alt="Third slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
            </div>
            <!-- Slideshow End -->
        </div>
        </div>         
        </div>
        <!-- col-6 -->
        <!--/col-4-->
        <div class="col-md-4"> 
                <div class="panel">
                <div class="panel-body">
                    <center>
                        <h5></h5>
                        <h6 >
                            Group Chat
                        </h6>
                    </center>
                     <div class="panel panel-info">
                        <div class="panel-body">
                            <form >
                                <div class="form-group">
                                    <p>
                                        <input id="nickText" type="text" style="padding: 5px; border: 1px solid peru;" />
                                        <button id="nick" class="btn-primary">Set Nickname</button>
                                    </p>
                                    <textarea style="font-size: 12px; height:300px; width:100%; border: 1px solid purple;"></textarea>
                                    <hr />
                                    <p>
                                        <input id="chatText" type="text" />
                                        <button id="chat" class="btn-primary">Send Chat Message</button>
                                    </p>
                                    
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>                              
                </div>
                <!--/col-4-->
                <!--/col-2-->
                <div class="col-md-2"> 
                <div class="panel">
                <div class="panel-body">
                    
                    <form >
                        <div class="form-group">
                            <h5></h5>
                            <h6>
                                active users: <b id="listu"></b>
                            </h6>
                            <p id="activeuser" style="height:400px;width:100%;border: 1px solid blue;">  
                                
                            </p>
                        </div>
                    </form>
                    
                </div>
                </div>                              
                </div>
                <!--/col-2-->
    </div>
    </div>
    
    <%- include ./partial/footer.ejs %>
    
    <script src="autoslideshow.js"></script>
    </body>
</html>
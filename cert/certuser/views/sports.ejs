<html ang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="content-type" content="text/html; charset=UTF-8">
        <title>News App</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </head>
    <body>
    <div class="container">
    <%- include ./partial/header.ejs %>
    <br><br>
    <h3 > 
        Latest Sports News 
    </h3>
    <div class="row">
        <!-- col-12 -->
        <div class="col-md-12"> 
        <div class="panel">
        <div class="panel-body">
            <% for(var i=0; i<data.length; i++) {%>
                <div class="media" style="border: dashed">
                    <img src=<%= data[i].urlToImage %> style="width:250px; height:250px;" class="align-self-center mr-3" alt="...">
                    <div class="media-body">
                        <h5 class="mt-0" > <%= data[i].title %> </h5>
                        <p> <%= data[i].description %> </p>
                        <p class="mb-0"> <%= data[i].content %> </p>
                        <a href=<%= data[i].url %> target="_blank"> Click here for more details</a>
                        <p class="mb-0"> Published At : <%= data[i].publishedAt %> </p>
                        <p class="mb-0"> Source : <%= data[i].source.name %>, <%= data[i].author %> </p>
                    </div>
                </div>
            <%}%>    
        
        </div>
        </div>                              
        </div>
        <!-- col-12 -->
    </div>
    </div>
    <%- include ./partial/footer.ejs %>
    
    </body>
</html>